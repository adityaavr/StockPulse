<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunrise_green"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Heading for the Edit Profile Page -->
        <TextView
            android:id="@+id/tvEditProfileHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="24sp"
            android:textColor="@color/night_black"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp"/>

        <!-- Editable Company Name -->
        <TextView
            android:id="@+id/tvEditCompanyNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etEditCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter company name"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"/>

        <!-- Editable Person Name -->
        <TextView
            android:id="@+id/tvEditPersonNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etEditPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"/>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveChanges"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="18sp"
            android:backgroundTint="@color/sunset_green"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>

